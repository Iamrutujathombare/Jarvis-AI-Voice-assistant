pipeline {
  agent any

  environment {
    TARGET = "ubuntu@18.143.166.91"
  }

  triggers {
    githubPush()
  }

  stages {
    stage("Checkout") {
      steps {
        git url: "https://github.com/Iamrutujathombare/Jarvis-AI-Voice-assistant.git", branch: "main"
      }
    }

    stage("Deploy to EC2") {
      steps {
        sshagent(['node-key']) {
          sh '''
          ssh -o StrictHostKeyChecking=no ubuntu@18.143.166.91 "echo Connected"
          rsync -avz --delete --exclude venv . ${TARGET}:/opt/jarvis
          ssh ${TARGET} "sudo systemctl restart jarvis"
          '''
        }
      }
    }
  }
}