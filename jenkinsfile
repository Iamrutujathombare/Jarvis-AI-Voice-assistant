pipeline {
  agent any

  environment {
    TARGET = "ubuntu@3.7.70.244"
  }

  triggers {
    githubPush()
  }

  stages {

    stage("Checkout") {
      steps {
        git url: "https://github.com/Iamrutujathombare/Jarvis-AI-Voice-assistant.git", branch: "main"
      }
    }

    stage("Deploy to EC2") {
      steps {
        sshagent(['node-key']) {
          sh '''
          ssh -o StrictHostKeyChecking=no $TARGET "echo Connected"
          ssh $TARGET "sudo mkdir -p /opt/jarvis && sudo chown ubuntu:ubuntu /opt/jarvis"
          rsync -avz --delete --exclude venv . $TARGET:/opt/jarvis
          ssh $TARGET "sudo systemctl restart jarvis.service"
          '''
        }
      }
    }
  }
}